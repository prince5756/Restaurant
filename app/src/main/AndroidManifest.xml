<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Location permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        <activity
            android:name=".activities.ActivityMenuList"
            android:exported="false" />
        <activity
            android:name=".activities.ActivityBookingList"
            android:exported="false" />
        <activity
            android:name=".activities.ActivityBookingHistory"
            android:exported="false" />
        <activity
            android:name=".activities.ActivityUpdateMenuItemDetails"
            android:exported="false" />
        <activity
            android:name=".activities.MapActivity"
            android:exported="false" />
        <activity
            android:name=".activities.PaymentMethods"
            android:exported="false" />
        <activity
            android:name=".activities.Subscription"
            android:exported="false" /> <!-- Main Application Activities -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivityRestaurantInformation"
            android:exported="true" /> <!-- Main Application Activities -->
        <!-- Other Activities -->
        <activity
            android:name=".activities.ActivityShowRestaurantProfileDetails"
            android:exported="false" />
        <activity
            android:name=".fragments.SetUp"
            android:exported="false" />
        <activity
            android:name=".fragments.History"
            android:exported="false" />
        <activity
            android:name=".fragments.Feedback"
            android:exported="false" />
        <activity
            android:name=".activities.profile"
            android:exported="false" />
        <activity
            android:name=".activities.ActivityFragmentManager"
            android:exported="true" />
        <activity
            android:name=".activities.loadingact"
            android:exported="false" />
        <activity
            android:name=".activities.SignupActivity"
            android:exported="true" />
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true" /> <!-- Meta-data for preloaded fonts -->
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_API_KEY_HERE" />
    </application>

</manifest>