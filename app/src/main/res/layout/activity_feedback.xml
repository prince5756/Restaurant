<?xml version="1.0" encoding="utf-8"?>
<!-- activity_feedback.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feedbackLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.FeedbackActivity">

    <LinearLayout
        android:id="@+id/appBarFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="2dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/titletxt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:text="Feedback"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>
    <!-- Main Content ScrollView -->
    <ScrollView
        android:id="@+id/scrollViewFeedback"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/appBarFeedback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/linearFeedbackContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Instruction Text -->
            <TextView
                android:id="@+id/tvFeedbackInstruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We value your feedback. Please rate our app and share your comments below."
                android:textAppearance="?attr/textAppearanceBody1" />

            <!-- Rating Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardRatingFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvRateOurApp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate Our App"
                        android:textAppearance="?attr/textAppearanceHeadline6" />

                    <RatingBar
                        android:id="@+id/ratingBarFeedback"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:numStars="5"
                        android:stepSize="1"
                        android:rating="0"
                        android:isIndicator="false"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Detailed Feedback Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutFeedback"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your comments (e.g., feature suggestions, improvements, or any issues)"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFeedbackComments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:maxLines="6" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Submit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmitFeedback"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:backgroundTint="#333333"
                android:layout_marginTop="20dp"
                android:text="Submit Feedback" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
