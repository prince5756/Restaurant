<?xml version="1.0" encoding="utf-8"?>
<!-- activity_complaint.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/complaintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.ComplaintActivity">

    <LinearLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="2dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_back_arrow" />

        <TextView
            android:id="@+id/titletxt"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:text="Complaint Details"
            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgComplaintHistory"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:padding="2dp"
            android:scaleType="fitStart"
            android:src="@drawable/ellipsis" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/linearContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvInstruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select all issues that apply or describe your problem in detail. This helps us quickly understand and resolve your issue. For example:" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupIssues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:chipSpacing="2dp"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCrash"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="App Crashes" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSlow"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Slow Performance" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipUI"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="UI Glitches" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipLogin"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Login Issues" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPayment"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Payment Failure" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipNetwork"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="Network Problems" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipOther"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:textAlignment="center"
                    android:text="Other" />
            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutDetails"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Describe the problem in detail">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:maxLines="6" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tvScreenshotLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attach a screenshot (optional):"
                android:textSize="16sp"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/ivScreenshotPreview"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:background="#FAF9F6"
                android:contentDescription="Attached screenshot preview" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAttachScreenshot"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Attach Screenshot" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmitComplaint"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#333333"
                android:text="Submit Report" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
