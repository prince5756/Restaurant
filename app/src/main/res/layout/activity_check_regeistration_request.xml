            <!--                    android:layout_width="wrap_content"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:text=" :"-->
            <!--                    android:textSize="16sp"-->
            <!--                    android:paddingStart="4dp" />-->
            <!--                <TextView-->
            <!--                    android:id="@+id/textTotalMenus"-->
            <!--                    android:layout_width="0dp"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:text="0"-->
            <!--                    android:textSize="16sp"-->
            <!--                    android:paddingStart="8dp"-->
            <!--                    android:layout_weight="1" />-->
            <!--            </LinearLayout>-->

            <!-- Row 6: Total Seats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">
                <TextView
                    android:id="@+id/labelTotalSeats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Seats"
                    android:textStyle="bold"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" :"
                    android:textSize="16sp"
                    android:paddingStart="4dp" />
                <TextView
                    android:id="@+id/textTotalSeats"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp"
                    android:paddingStart="8dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- Row 7: Restaurant ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">
                <TextView
                    android:id="@+id/labelRestaurantId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurant ID"
                    android:textStyle="bold"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" :"
                    android:textSize="16sp"
                    android:paddingStart="4dp" />
                <!-- Existing ID for Restaurant ID value -->
                <TextView
                    android:id="@+id/textRestaurantId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Restaurant ID"
                    android:textSize="16sp"
                    android:paddingStart="8dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- Row 8: User ID -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp">
                <TextView
                    android:id="@+id/labelUserId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User ID"
                    android:textStyle="bold"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" :"
                    android:textSize="16sp"
                    android:paddingStart="4dp" />
                <!-- Existing ID for User ID value -->
                <TextView
                    android:id="@+id/textUserId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="User ID"
                    android:textSize="16sp"
                    android:paddingStart="8dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- Row 9: Payment Status -->

        </LinearLayout>
    </ScrollView>

