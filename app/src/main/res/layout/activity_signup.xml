<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".activities.SignupActivity">



    <!-- Background Image -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/curved_background"
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/SignupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Signup"
            android:layout_marginTop="20dp"
            android:paddingBottom="1dp"
            android:textSize="35sp"
            android:fontFamily="@font/montserrat_extra_bold"
            android:textColor="#000"
            android:layout_marginBottom="16dp" />

        <!-- Email Input with Icon and Underline -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <!-- Icon at the Start -->
            <ImageView
                android:id="@+id/usriconStart"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/user" />

            <!-- EditText Field -->
            <EditText
                android:id="@+id/userField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/usriconStart"
                android:layout_marginStart="8dp"
                android:background="@android:color/transparent"
                android:hint="Enter Your Restaurant Name"
                android:textColor="#000000"
                android:textColorHint="#808080"
                android:padding="12dp"
                android:inputType="textEmailAddress" />

            <!-- Bold Underline -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/userField"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:background="#000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <!-- Icon at the Start -->
            <ImageView
                android:id="@+id/iconStart"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/email" />

            <!-- EditText Field -->
            <EditText
                android:id="@+id/emailField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iconStart"
                android:layout_marginStart="8dp"
                android:background="@android:color/transparent"
                android:hint="Email"
                android:textColor="#000000"
                android:textColorHint="#808080"
                android:padding="12dp"
                android:inputType="textEmailAddress" />

            <!-- Bold Underline -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/emailField"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:background="#000000" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <!-- Icon at the Start -->
            <ImageView
                android:id="@+id/iconPhone"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/mobile" />

            <!-- EditText Field -->
            <EditText
                android:id="@+id/phoneField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iconPhone"
                android:layout_marginStart="8dp"
                android:background="@android:color/transparent"
                android:hint="Phone number"
                android:textColor="#000000"
                android:textColorHint="#808080"
                android:padding="12dp"
                android:maxLength="10"
                android:inputType="phone" />

            <!-- Bold Underline -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/phoneField"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:background="#000000" />
        </RelativeLayout>


        <!-- Password Input with Icon and Underline -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <!-- Icon at the Start -->
            <ImageView
                android:id="@+id/iconCreatePassword"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/pass" />

            <!-- EditText Field -->
            <EditText
                android:id="@+id/createPasswordField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Create Password"
                android:layout_marginStart="36dp"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textColorHint="#808080" />

            <!-- Bold Underline -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/createPasswordField"
                android:layout_marginTop="4dp"
                android:background="#000000" />

            <!-- Show/Hide Password Button -->
            <ImageView
                android:id="@+id/createShowPasswordIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/eye_closed"
                android:contentDescription="Show Password"
                android:layout_marginEnd="8dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp">

            <!-- Icon at the Start -->
            <ImageView
                android:id="@+id/iconConfirmPassword"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/pass" />

            <!-- EditText Field -->
            <EditText
                android:id="@+id/passwordField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm Password "
                android:layout_marginStart="36dp"
                android:background="@android:color/transparent"
                android:padding="12dp"
                android:inputType="textPassword"
                android:textColor="#000"
                android:textColorHint="#808080" />

            <!-- Bold Underline -->
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/passwordField"
                android:layout_marginTop="4dp"
                android:background="#000000" />

            <!-- Show/Hide Password Button -->
            <ImageView
                android:id="@+id/ConfirmPasswordIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/eye_closed"
                android:contentDescription="Show Password"
                android:layout_marginEnd="8dp" />
        </RelativeLayout>
        <!-- Forgot Password Button (Placed between Terms and Password) -->

        <!-- Privacy Policy and Terms Checkbox -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/privacyCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#000"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/privacyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I agree to the "
                android:textColor="#000"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/privacyPolicy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:textColor="#FF9800"
                android:clickable="true"
                android:onClick="openPrivacyPolicy"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/andText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" and "
                android:textColor="#000"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/termsConditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms &amp; Conditions"
                android:textColor="#FF9800"
                android:clickable="true"
                android:onClick="openTermsConditions"
                android:layout_gravity="center_vertical" />
        </LinearLayout>


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#000"
            android:text="Signup"
            android:textColor="#FFF"
            android:enabled="true" />

        <!-- Log in Redirect -->
        <TextView
            android:id="@+id/btnSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:text="Already have an account? Sign In"
            android:textColor="#000"
            android:onClick="redirectToLogin" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone">

        </ProgressBar>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>