<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Button to launch DatePicker for selecting a closed date -->
    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/amaranth"
        android:text="Holiday Set Up"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/alatsi"
        android:letterSpacing="0.05"
        android:text=" - Choose the date when your restaurant will close."
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnSelectDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFF"
        android:fontFamily="@font/chivo_mono"
        android:letterSpacing="0.05"
        android:padding="15dp"
        android:text="Select Date"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="16sp"
        app:cornerRadius="15dp"
        app:strokeColor="#000"
        app:strokeWidth="2dp" />

    <!-- Button to submit the selected date -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="#000"
        android:fontFamily="@font/chivo_mono"
        android:letterSpacing="0.06"
        android:padding="15dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="15dp" />

</LinearLayout>
